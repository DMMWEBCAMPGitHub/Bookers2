<div id="notice">
  <%= flash[:notice] %>
</div>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render '/users/info', user: @book.user %>
      <%= render 'new', book: @new_book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
          <tbody>
          <tr>
            <td><%= link_to user_path(@book.user) do %>
                <%= image_tag @book.user.get_profile_image %><br><%=@book.user.name  %><%end%></td>
            <td><%= link_to book_path(@book) do %>
                <%= @book.title %>
                <%end%></td>
            <td><%= @book.body%></td>
            <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path, class: "btn-sm btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book.id), method: :delete,class: "btn-sm btn-danger", "data-confirm" => "本当に消しますか？" %></td>
            <td colspan="5"></td>
          </tr>
          <%end%>
          </tbody>
        </table>
    </div>
  </div>
</div>
