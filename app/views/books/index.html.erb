<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <%= image_tag @user.get_profile_image %>
      <table class="table">
        <tbody>
        <tr>
	        <th>name</th>
	        <th><%=@user.name  %></th>
        </tr>
        <tr>
	        <th>introduction</th>
	        <th><%=@user.introduction %></th>
        </tr>
        </tbody>
      </table>
        <div class="row">
        <a class="btn btn-outline-secondary btn-block edit_user"href="/users/edit"><i class="fas fa-user-cog"></i><!--Font Awesome--></a>
        </div>

      <h2 class="mt-3">New book</h2>
      <!--%= form_with model: Book.new, url book_path do |f| %-->
        <p>Title</p>
  　　    <%= f.text_field :title %>
	      <p>Opinion</p>
  　　    <%= f.text_area :body %>
	      <%= f.submit 'Create Book' %>
　　　  <% end %>
      </div>
      
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
       <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th colspan="1"></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image %></td>
            <td><%= book.title%></td>
            <td><%= book.body%></td>
          </tr>
          <%end%>
        </tbody>  
       </table>  
    </div>
  </div>
</div>


 

