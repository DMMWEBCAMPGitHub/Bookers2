<div id="notice">
  <%= flash[:notice] %>  <!--Welcome! You have signed up successfully.--><!--Signed in successfully.-->
</div>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <%= image_tag @user.get_profile_image %>
      <table class="table">
        <tbody>
        <tr>
	        <th>name</th>
	        <th><%=@user.name %></th>
        </tr>
        <tr>
	        <th>introduction</th>
	        <th><%=@user.introduction %></th>
        </tr>
        </tbody>
      </table>
        <a class="btn btn-outline-secondary btn-block edit_user"href="/users/edit"><i class="fas fa-user-cog"></i></a>

      <h2 class="mt-3">New book</h2>
        <%= form_with model: Book.new  do |f| %>
        <p>Title</p>
  　　    <%= f.text_field :title %>
	      <p>Opinion</p>
  　　    <%= f.text_area :body %>
	      <div class="btn-wrapper col-10 mx-auto">
          <div class="row">
          <a class="btn btn-success" href="/books/show">Create Book</a>
          </div>
        </div>
　　　  <% end %>
　　</div>

    <div class="col-md-8 offset-md-1">
       <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="2"></th>
          </tr>
          </thead>
        </table>
    </div>
  </div>
</div>
