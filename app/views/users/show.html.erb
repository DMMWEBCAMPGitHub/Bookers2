<div id="notice">
  <%= flash[:notice] %>
</div>

<% if @user.errors.any? %>
            <%= @user.errors.count %>件のエラーが発生しました>
            <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
            </ul>
          <% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <%= image_tag @user.get_profile_image %>
      <table class="table">
        <tbody>
        <tr>
	        <th>name</th>
	        <th><%=@user.name %></th>
        </tr>
        <tr>
	        <th>introduction</th>
	        <th><%=@user.introduction %></th>
        </tr>
        </tbody>
      </table>
          <%= link_to edit_user_path(@user),class:"btn btn-outline-secondary btn-block" do%>
          <i class="fas fa-user-cog"></i>
          <% end %>

      <h2 class="mt-3">New book</h2>
        <%= form_with model: Book.new, method: :post do |f| %>
        <p>Title</p>
  　　    <%= f.text_field :title %>
	      <p>Opinion</p>
  　　    <%= f.text_area :body %>
	      <div class="btn-wrapper col-10 mx-auto">
          <div class="row">
          <%= f.submit 'Create Book', class:"btn btn-success" %>
　　　    </div>
        </div>
　　　  <% end %>
　　</div>

    <div class="col-md-8 offset-md-1">
       <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="2"></th>
          </tr>
          </thead>
          <tbody>
            <% @user.books.each do |book| %>
          <tr>
            <td><%= link_to user_path(book.user) do %><%= image_tag book.user.get_profile_image %><%end%></td>
            <td><%= link_to book_path(book.id) do %><%= book.title%><%end%></td>
            <td><%= book.body%></td>
          </tr>
          <%end%>
        </tbody>
        </table>
    </div>
  </div>
</div>
